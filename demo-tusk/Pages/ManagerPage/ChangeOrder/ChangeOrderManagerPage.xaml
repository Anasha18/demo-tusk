<Page x:Class="demo_tusk.Pages.ManagerPage.ChangeOrderManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:demo_tusk.Pages.ManagerPage"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="ChangeOrderManagerPage">

    <Grid Background="White">
        <Button 
            Name="buttonChangeOrderClick"
            Content="Изменить данные заказа"
            HorizontalAlignment="Left"
            Margin="546,360,0,0"
            VerticalAlignment="Top"
            Click="buttonChangeOrderClick_Click"
            Height="30"
            Width="232"
        />

        <Label 
            Content="Id"
            HorizontalAlignment="Left"
            Margin="24,23,0,0"
            VerticalAlignment="Top"
            Width="87"
        />

        <TextBox 
            x:Name="textBoxId"
            HorizontalAlignment="Left"
            Margin="24,49,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="232"
            Height="30"
            IsReadOnly="True"
        />

        <Label 
            Content="Статус заказа"
            HorizontalAlignment="Left"
            Margin="24,95,0,0"
            VerticalAlignment="Top"
            Width="87"
        />

        <ComboBox 
             x:Name="ComboBoxStatus"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             Width="232" 
             Height="30"
             Margin="24,126,0,0"
            />

        <Label 
            Content="Дата доставки"
            HorizontalAlignment="Left"
            Margin="24,175,0,0"
            VerticalAlignment="Top"
            Width="87"
        />

        <TextBox 
            x:Name="textBoxDateTime"
            HorizontalAlignment="Left"
            Margin="24,201,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="232"
            Height="30"
        />

        <Label 
            Content="Цена доставки"
            HorizontalAlignment="Left"
            Margin="24,253,0,0"
            VerticalAlignment="Top"
            Width="101"
        />

        <TextBox 
            x:Name="textBoxCost"
            HorizontalAlignment="Left"
            Margin="24,279,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="232"
            Height="30"
        />
        
        <Button 
            x:Name="buttonBackPage"
            Content="Вернуться назад"
            HorizontalAlignment="Left"
            Margin="546,36,0,0"
            VerticalAlignment="Top"
            Click="buttonBackPage_Click"
            Height="30"
            Width="232"
        />



    </Grid>
</Page>
