<Page x:Class="demo_tusk.Pages.ManagerPage.CreateClient.CreateClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:demo_tusk.Pages.ManagerPage.CreateClient"
      mc:Ignorable="d"
      Title="CreateClientPage" Height="500" Width="900">
    <Grid Background="White">
        <Label 
            Content="Имя клиента"
            HorizontalAlignment="Left"
            Margin="24,23,0,0"
            VerticalAlignment="Top"
            Width="87"
        />

        <TextBox 
            x:Name="textBoxFirstName"
            HorizontalAlignment="Left"
            Margin="24,49,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="232"
            Height="30"
        />
        
        <Label 
            Content="Фамилия клиента"
            HorizontalAlignment="Left"
            Margin="24,85,0,0"
            VerticalAlignment="Top"
            Width="120"
        />

        <TextBox 
            x:Name="textBoxLastName"
            HorizontalAlignment="Left"
            Margin="24,109,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="232"
            Height="30"
        />
        
        <Label 
            Content="Номер телефона"
            HorizontalAlignment="Left"
            Margin="24,144,0,0"
            VerticalAlignment="Top"
            Width="120"
        />

        <TextBox 
            x:Name="textBoxPhoneNumber"
            HorizontalAlignment="Left"
            Margin="24,169,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="232"
            Height="30"
        />
        
        <Label 
            Content="Логин"
            HorizontalAlignment="Left"
            Margin="24,205,0,0"
            VerticalAlignment="Top"
            Width="120"
        />

        <TextBox 
            x:Name="textBoxLogin"
            HorizontalAlignment="Left"
            Margin="24,229,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="232"
            Height="30"
        />
        
        <Label 
            Content="Пароль"
            HorizontalAlignment="Left"
            Margin="24,261,0,0"
            VerticalAlignment="Top"
            Width="120"
        />

        <TextBox 
            x:Name="textBoxPassword"
            HorizontalAlignment="Left"
            Margin="24,289,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="232"
            Height="30"
        />
        
        <Button 
            x:Name="buttonBackPage"
            Content="Вернуться назад"
            HorizontalAlignment="Left"
            Margin="645,44,0,0"
            VerticalAlignment="Top"
            Click="ButtonBackPage_OnClick"
            Height="30"
            Width="232"
        />
        
        <Button 
            Name="buttonCreateClient"
            Content="Создать клиента"
            HorizontalAlignment="Left"
            Margin="645,380,0,0"
            VerticalAlignment="Top"
            Click="ButtonCreateClient_OnClick"
            Height="30"
            Width="232"
        />
    </Grid>
</Page>
