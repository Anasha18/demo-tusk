<Page x:Class="demo_tusk.Pages.ManagerPage.CreateOrder.CreateOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:demo_tusk.Pages.ManagerPage.CreateOrder"
      mc:Ignorable="d"
      Title="CreateOrderPage" Height="450" Width="800">
    <Grid Background="White">
        <Label 
            Content="Статус заказа"
            HorizontalAlignment="Left"
            Margin="23,40,0,0"
            VerticalAlignment="Top"
            Width="87"
        />

        <ComboBox 
            x:Name="ComboBoxStatus"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="232" 
            Height="22"
            Margin="23,66,0,0"
        />

        <Label 
            Content="Работник"
            HorizontalAlignment="Left"
            Margin="25,95,0,0"
            VerticalAlignment="Top"
            Width="87"
        />

        <ComboBox 
            x:Name="ComboBoxUser"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="232" 
            Height="22"
            Margin="25,121,0,0"
        />

        <Label 
            Content="Адрес"
            HorizontalAlignment="Left"
            Margin="24,145,0,0"
            VerticalAlignment="Top"
            Width="87"
        />

        <TextBox 
            x:Name="textBoxAddress"
            HorizontalAlignment="Left"
            Margin="24,171,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="231"
            Height="23"
        />

        <Label 
            Content="Кто отправляет"
            HorizontalAlignment="Left"
            Margin="24,199,0,0"
            VerticalAlignment="Top"
            Width="116"
        />

        <ComboBox 
            x:Name="ComboBoxClientFrom"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="232" 
            Height="22"
            Margin="24,225,0,0"
        />

        <Label 
            Content="Кто получает"
            HorizontalAlignment="Left"
            Margin="24,249,0,0"
            VerticalAlignment="Top"
            Width="104"
        />

        <ComboBox 
            x:Name="ComboBoxOnClient"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="232" 
            Height="22"
            Margin="25,274,0,0"
        />

        <Label 
            Content="Дата доставки"
            HorizontalAlignment="Left"
            Margin="24,301,0,0"
            VerticalAlignment="Top"
            Width="104"
        />

        <TextBox 
            x:Name="textBoxFinishDateOrder"
            HorizontalAlignment="Left"
            Margin="24,326,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="231"
            Height="23"
        />

        <Label 
            Content="Длина товара"
            HorizontalAlignment="Left"
            Margin="306,40,0,0"
            VerticalAlignment="Top"
            Width="104"
        />

        <TextBox 
            x:Name="textBoxLengthItem"
            HorizontalAlignment="Left"
            Margin="311,66,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="231"
            Height="22"
        />

        <Label 
            Content="Ширина товара"
            HorizontalAlignment="Left"
            Margin="310,95,0,0"
            VerticalAlignment="Top"
            Width="104"
        />

        <TextBox 
            x:Name="textBoxWidthItem"
            HorizontalAlignment="Left"
            Margin="311,121,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="231"
            Height="22"
        />

        <Label 
            Content="Вес товара"
            HorizontalAlignment="Left"
            Margin="310,145,0,0"
            VerticalAlignment="Top"
            Width="104"
        />

        <TextBox 
            x:Name="textBoxWeightItem"
            HorizontalAlignment="Left"
            Margin="311,172,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="231"
            Height="22"
        />

        <Label 
            Content="Стоимость доставки"
            HorizontalAlignment="Left"
            Margin="311,199,0,0"
            VerticalAlignment="Top"
            Width="147"
        />
        <TextBox 
            x:Name="textBoxCostOrder"
            HorizontalAlignment="Left"
            Margin="311,225,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="231"
            Height="22"
        />
        <Label 
            Content="Тип товара"
            HorizontalAlignment="Left"
            Margin="306,249,0,0"
            VerticalAlignment="Top"
            Width="114"
        />
        <ComboBox 
            x:Name="ComboBoxTypeItemOrder"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="232" 
            Height="22"
            Margin="310,274,0,0"
            
        />
        <Button 
            x:Name="buttonBackPage"
            Content="Вернуться назад"
            HorizontalAlignment="Left"
            Margin="570,36,0,0"
            VerticalAlignment="Top"
            Click="buttonBackPage_Click"
            Height="30"
            Width="194"
        />
        
        <Button 
            x:Name="buttonCreateOrderPage"
            Content="Создать заказ"
            HorizontalAlignment="Left"
            Margin="570,365,0,0"
            VerticalAlignment="Top"
            Click="buttonCreateOrderPage_Click"
            Height="30"
            Width="194"
        />
        
    </Grid>
</Page>
