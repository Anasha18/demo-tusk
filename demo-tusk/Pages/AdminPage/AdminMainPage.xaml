<Page x:Class="demo_tusk.Pages.AdminPage.AdminMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:demo_tusk.Pages.AdminPage"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="AdminMainPage">

    <Grid Background="White" Margin="-1,0,1,0">

        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>

        <DataGrid 
                  Name="dataGridAdmin" 
                  ColumnWidth="*" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectedCellsChanged="dataGridAdmin_SelectedCellsChanged">

            <DataGrid.Columns>

                <DataGridTextColumn Header="ИД" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}"/>
                <DataGridTextColumn Header="ИНН" Binding="{Binding TaxNumber}"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}"/>
                <DataGridTextColumn Header="Пароль" Binding="{Binding Password}"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role.Name}"/>

            </DataGrid.Columns>

        </DataGrid>

        <Button 
                Name="buttonAdd"
                Content="Добавить нового работника"
                HorizontalAlignment="Left"
                Margin="11,70,0,0"
                Grid.Row="1"
                VerticalAlignment="Top"
                Click="buttonAdd_Click"
                Height="30"
                Width="172"
        />

        <Button 
                Name="buttonUpdate"
                Content="Обновить данные"
                HorizontalAlignment="Left"
                Margin="11,108,0,0"
                Grid.Row="1"
                VerticalAlignment="Top"
                Click="buttonUpdate_Click"
                Height="30"
                Width="172"
        />

        <Button 
                x:Name="buttonClear"
                Content="Очистить поля"
                HorizontalAlignment="Left"
                Margin="402,123,0,0"
                Grid.Row="1"
                VerticalAlignment="Top"
                Click="buttonClear_Click"
                Height="30"
                Width="172"
        />

        <Button 
                x:Name="buttonBack"
                Content="Выйти в меню"
                HorizontalAlignment="Left"
                Margin="590,123,0,0"
                Grid.Row="1"
                VerticalAlignment="Top"
                Click="buttonBack_Click"
                Height="30"
                Width="172"
        />

        <Label 
               Content="ИД"
               HorizontalAlignment="Left"
               Margin="11,5,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
        />

        <TextBox 
                x:Name="textBoxId"
                HorizontalAlignment="Left"
                Margin="11,28,0,0"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="86"
                IsReadOnly="True"
                Height="23"
                Grid.Row="1"
        />

        <Label 
                Content="Имя"
                HorizontalAlignment="Left"
                Margin="104,5,0,0"
                Grid.Row="1"
                VerticalAlignment="Top"
                Width="87"
        />

        <TextBox 
                x:Name="textBoxFirstName"
                HorizontalAlignment="Left"
                Margin="106,28,0,0"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="86"
                Height="23"
                Grid.Row="1"
        />

        <Label 
                Content="Фамилия"
                HorizontalAlignment="Left"
                Margin="201,5,0,0"
                VerticalAlignment="Top"
                Grid.Row="1"
        />

        <TextBox 
                x:Name="textBoxLastName"
                HorizontalAlignment="Left"
                Margin="201,28,0,0"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="86"
                Height="23"
                Grid.Row="1"
        />

        <Label 
                Content="Телефон"
                HorizontalAlignment="Left"
                Margin="296,5,0,0"
                VerticalAlignment="Top" 
                Grid.Row="1"
        />

        <TextBox 
                x:Name="textBoxPhoneNumber"
                HorizontalAlignment="Left"
                Margin="296,28,0,0"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="86"
                Height="23" 
                Grid.Row="1" 
        />

        <Label 
                Content="ИНН"
                HorizontalAlignment="Left"
                Margin="392,5,0,0"
                VerticalAlignment="Top"
                Grid.Row="1"
        />

        <TextBox 
                x:Name="textBoxTaxNumber"
                HorizontalAlignment="Left"
                Margin="392,28,0,0"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="86"
                Height="23" 
                Grid.Row="1"
        />

        <TextBox 
                x:Name="textBoxLogin"
                HorizontalAlignment="Left"
                Margin="488,28,0,0"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="86"
                Height="23" 
                Grid.Row="1"
        />

        <Label 
                Content="Логин"
                HorizontalAlignment="Left"
                Margin="490,5,0,0"
                VerticalAlignment="Top"
                Grid.Row="1"
        />
        
        <TextBox 
                x:Name="textBoxPassword"
                HorizontalAlignment="Left"
                Margin="583,28,0,0"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                Width="86"
                Height="23"
                Grid.Row="1" 
        />

        <Label 
                Content="Пароль"
                HorizontalAlignment="Left"
                Margin="583,5,0,0"
                VerticalAlignment="Top"
                Grid.Row="1"
        />

        <Label 
                Content="Роль"
                HorizontalAlignment="Left"
                Margin="678,5,0,0"
                VerticalAlignment="Top" 
                Grid.Row="1"
        />

        <ComboBox 
                 x:Name="comboBoxRole"
                 HorizontalAlignment="Left"
                 Margin="678,29,0,0"
                 Grid.Row="1"
                 VerticalAlignment="Top"
                 Width="86"
        />
    </Grid>
</Page>
